

{
  "$schema": "http://json.schemastore.org/launchsettings.json",
  "iisSettings": {
    "windowsAuthentication": false,
    "anonymousAuthentication": true,
    "iisExpress": {
      "applicationUrl": "http://localhost:45320", // ה-URL של IIS Express
      "sslPort": 44304 // פתח גם SSL
    }
  },
  "profiles": {
    "http": {
      "commandName": "Project",
      "dotnetRunMessages": true,
      "launchBrowser": true, // לפתוח דפדפן אוטומטית
      "applicationUrl": "http://localhost:5124", // הכתובת לפורט HTTP
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development" // סביבה לפיתוח
      }
    },
    "https": {
      "commandName": "Project",
      "dotnetRunMessages": true, // הצגת הודעות בזמן הריצה
      "launchBrowser": true, // לפתוח דפדפן אוטומטית
      "applicationUrl": "https://localhost:7143", // הכתובת לפורט HTTPS
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development" // סביבה לפיתוח
      }
    },
    "IIS Express": {
      "commandName": "IISExpress",
      "launchBrowser": true, // לפתוח דפדפן אוטומטית
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development" // סביבה לפיתוח
      }
    }
  }
}

